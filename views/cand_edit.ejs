<%include partials/head1.ejs%>

<style>
  label {
    margin-top: 0.4em
  }

  label.error {
    display: inline !important
  }
</style>

<body>


  <header id="header" class="split-menu">



    <div class="container clearfix">

      <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>

      <!-- Logo
        ============================================= -->
      <div id="logo">

      </div><!-- #logo end -->

      <!-- Primary Navigation
        ============================================= -->
      <nav id="primary-menu" class="with-arrows clearfix not-dark">

      </nav><!-- #primary-menu end -->

    </div>

    </div>

  </header><!-- #header end -->

  <section id="content" class="mt-5 mb-5">

    <div class="content-wrap">

      <div class="container-fluid clearfix">

        <h1>Edit your current details</h1>

        <div class="row">
          <div class="col-lg-8 bg-cand-form" style="border-radius: 0px 0px 0px 0px"></div>
          <div class="col-lg-4 p-3" style="background:#cdccb9; border-radius: 0px 0px 0px 0px">
            <form class="row" action="/user_<%=candidate[0].id%>" method="post" id="cand_edit">

              <div class="col-12 ">
                <label for="position">Current Position</label>
                <input type="text" name="position" id="position" class="form-control "
                  value="<%=candidate[0].position%>" placeholder="Enter your Current Position">
              </div>
              <div class="col-12 ">
                <label for="drink">What's your favourite coffee drink?</label>
                <input type="text" name="drink" id="drink" class="form-control " value="<%=candidate[0].coffee%>"
                  placeholder="......">
              </div>
              <div class="col-12 ">
                <label for="tool">Whats' your favourite barista tool?</label>
                <input type="text" name="tool" id="tool" class="form-control " value="<%=candidate[0].tool%>"
                  placeholder=".....">
              </div>
              <div class="col-12 ">
                <label for="bean">Whats' your favourite bean origin?</label>
                <input type="text" name="bean" id="bean" class="form-control " value="<%=candidate[0].bean%>"
                  placeholder=".....">
              </div>
              <div class="col-12 ">
                <label for="award">I have an award for...</label>
                <input type="text" name="award" id="award" class="form-control " value="<%=candidate[0].award%>"
                  placeholder="Award or if none enter 'No'">
              </div>
              <div class="col-12 ">
                <label for="award">In a few words describe your last job or daily routine</label>
                <input type="text" name="rout" id="rout" class="form-control " value="<%=candidate[0].rout%>"
                  placeholder=".....">
              </div>
              <div class="col-12 ">
                <div class="row">
                  <div class="col-md-6 ">
                    <label for="country">Country:</label>
                    <select class="form-control " name="country" id="country">
                      <option value="<%=candidate[0].country%>"><%=candidate[0].country%></option>
                      <option value="UK">UK</option>
                      <option value="USA">USA</option>
                      <option value="UAE">UAE</option>
                      <option value="International">International</option>
                    </select>
                  </div>
                  <div class="col-md-6 ">
                    <label for="city">City:</label>
                    <input type="text" name="city" id="city" class="form-control" value="<%=candidate[0].city%>"
                      placeholder="Enter your City">
                  </div>
                  <div class="w-100"></div>

                  <div class="col-md-6 ">
                    <label for="experience">Experience:</label>
                    <select class="form-control " name="experience" id="experience">
                      <option value="<%=candidate[0].experience%>"><%=candidate[0].experience%></option>
                      <option value="Less than 1 Year">Less than 1 Year</option>
                      <option value="1-2 Years">1 - 2 Years</option>
                      <option value="2-4 Years">2 - 4 Years</option>
                      <option value="4+ Years">4+ Years</option>
                    </select>
                  </div>
                  <div class="col-md-6 ">
                    <label fpr="phone">Phone:</label>
                    <input type="text" name="phone" id="phone" class="form-control " value="<%=candidate[0].phone%>"
                      placeholder="Enter your Phone">
                  </div>

                  <fieldset class="form-group col-12">
                    <label>Visa Status</label>
                    <div class="row">
                      <div class="col-sm-10">
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="visaradios" id="gridRadios1"
                            value="Citizen">
                          <label class="form-check-label" for="gridRadios1">
                            Citizen
                          </label>
                        </div>
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="visaradios" id="gridRadios2"
                            value="Work Visa">
                          <label class="form-check-label" for="gridRadios2">
                            Work Visa
                          </label>
                        </div>
                        <div class="form-check disabled">
                          <input class="form-check-input" type="radio" name="visaradios" id="gridRadios3"
                            value="Tourist Visa">
                          <label class="form-check-label" for="gridRadios3">
                            Tourist Visa
                          </label>
                        </div>
                      </div>
                    </div>
                  </fieldset>

                  <div class="col-12 bottommargin-sm">
                    <label>I have Previous Experience as: (required) </label>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="hb" name="checkbox[]" value="Head Barista">
                      <label class="form-check-label" for="hb">Head Barista</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="control" name="checkbox[]"
                        value="Quality Controller">
                      <label class="form-check-label" for="control">Quality Controller</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="manager" name="checkbox[]" value="Manager">
                      <label class="form-check-label" for="manager">Manager</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="sw" name="checkbox[]" value="Sandwich Maker">
                      <label class="form-check-label" for="sw">Sandwich Maker</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="su" name="checkbox[]" value="Supervisor">
                      <label class="form-check-label" for="su">Supervisor</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="ba" name="checkbox[]" value="Barista">
                      <label class="form-check-label" for="su">Barista</label>
                    </div>
                  </div>
                  <div class="col-md-12 ">
                      <label for="speciality">Do you have any speciality experience? </label>
                      <input type="text" name ="speciality" id="speciality" class="form-control " value="<%=candidate[0].speciality%>"
                        placeholder="Enter any speciality experience">
                    </div>
                    <div class="col-md-12 ">
                        <label for="phone">Available From/Contract End Date:</label>
                        <input type="text" name="available" id="available" class="form-control " value="<%=candidate[0].available%>"
                          placeholder="Enter when you're available">
                      </div>
                  </div>

              
              <div class="">
                <label for="description">Describe Yourself:</label>
                <textarea name="description" id="description" class="form-control " cols="30"
                  rows="10"><%=candidate[0].description%></textarea>
              </div>
          </div>
          <div class="col-12 mt-2">
            <button type="submit" name="submit" class="btn btn-success">Done</button>
            <a href="javascript: history.go(-1)" class="btn btn-warning">Back</a>
          </div>

          </form>
        </div>

      </div>

    </div>


    </div>

  </section><!-- #content end -->


  <%include partials/footer.ejs%>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/additional-methods.js"></script>
  <script>

    $("#cand_edit").validate({
      rules: {
        drink: {
          required: true,
        },
        tool: {
          required: true,
        },
        bean: {
          required: true,
        },
        award: {
          required: true,
        },
        position: {
          required: true,
        },
        country: {
          required: true,
        },
        city: {
          required: true,
        },
        experience: {
          required: true,
        },
        phone: {
          required: true,
          number: true,
          minlength: 5
        },
      },
      messages: {
        drink: {
          required: 'This field is required'
        },
        tool: {
          required: 'This field is required',
        },
        bean: {
          required: 'This field is required',
        },
        award: {
          required: 'This field is required',
        },
        position: {
          required: 'This field is required',
        },
        country: {
          required: 'This field is required',
        },
        city: {
          required: 'This field is required',
        },
        experience: {
          required: 'This field is required',
        },
        phone: {
          required: 'This field is required',
          number: "Enter a phone number"
        },
      }
    });

  </script>

</body>



<%include partials/scripts.ejs%>