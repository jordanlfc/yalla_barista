<%include partials/head.ejs%>


<body>

    <%include partials/modals.ejs%>

    <header id="header" class="split-menu">

        <div id="header-wrap" style="background:#000000 ; height: 8em">

            <div class="container clearfix">

                <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>

                <!-- Logo
        ============================================= -->
                <div id="logo">
                    <%include partials/logo.ejs%>
                </div><!-- #logo end -->

                <!-- Primary Navigation
        ============================================= -->
                <nav id="primary-menu" class="with-arrows clearfix not-dark">

                    <%include partials/navitems.ejs%>

                </nav><!-- #primary-menu end -->

            </div>

        </div>

    </header><!-- #header end -->

    <section id="recruiter" class="mt-5" style="min-height: 100vh">
        <div class="container-fluid">

            <div class="heading-block noborder">
                <h3 class=''>Admin Account</h3>
            </div>

            <% if(error && error.length > 0) { %>

            <div class='alert alert-danger' role='alert'>
                <%= error %>
            </div>
            <% } %>
            <% if(success && success.length > 0) { %>
            <div class='alert alert-success' role='alert'>
                <%= success %>
            </div>

            <% } %>

            <h4>Candidate Results</h4>

            <section id="content">

                <div class="content-wrap">

                    <div class="container-fluid clearfix">

                            <a href = "/admin_business" class="button button-large mb-3" style="float: right; background-color:#cbccb9; color:black">Business Results</a>
                            <a href = "/new" class="button button-large mb-3" style="float: right; background-color:#e4ad12; color:black">New Testimonial</a>

                        <div class="table-responsive">
                            <table id="datatable1" class="table table-striped table-bordered" cellspacing="0"
                                width="100%">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>County</th>
                                        <th>City</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Current Position</th>
                                        <th>Previous Experience</th>
                                        <th>Speciality</th>
                                        <th>Profile</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% candidates.map(candidate => { %>
                                    <tr>
                                        <td><%=candidate.fname%> <%=candidate.lname%></td>
                                        <td><%=candidate.country%></td>
                                        <td><%=candidate.city%></td>
                                        <td><%=candidate.email%></td>
                                        <td><%=candidate.phone%></td>
                                        <td><%=candidate.position%></td>
                                        <td><%=candidate.previousex%></td>
                                        <td><%=candidate.speciality%></td>
                                        <td><a href="adminuser_<%=candidate.id%>">View</td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>

                    </div>

                </div>

            </section>

            </tbody>
            </table>
        </div>
        </div>
    </section>



</body>

<%include partials/scripts.ejs%>

<%include partials/footer.ejs%>