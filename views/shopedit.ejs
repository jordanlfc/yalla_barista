<%include partials/head1.ejs%>


<body>


  </header><!-- #header end -->

  <section id="content" class="mt-5 mb-5">

    <div class="content-wrap">

      <div class="container-fluid clearfix">

        <div class="form-widget">

          <div class="form-result"></div>

          <div class="row">
            <div class="col-lg-8 bg-shop-form" style="border-radius: 0px 0px 0px 0px"></div>
            <div class="col-lg-4 p-3" style="background:#cdccb9; border-radius: 0px 0px 0px 0px">
              <form class="row" action="/business1_<%=business[0].id%>" method="post" id="business_edit">
                <div class="form-process"></div>
                <div class="col-12 form-group">
                  <label for="name">Company Name</label>
                  <input type="text" name="name" id="sname" class="form-control required"
                    value="<%=business[0].company_name%>" placeholder="Enter your Company Name">
                </div>
                <div class="col-12 form-group">
                  <label for="email">Email</label>
                  <input type="text" name="email" id="semail" class="form-control required"
                    value="<%=business[0].email%>" placeholder="Enter your Email">
                </div>
                <div class="col-12 form-group">
                  <div class="row">
                    <div class="col-md-6 form-group">
                      <label>Phone:</label>
                      <input type="text" name="phone" id="sphone" class="form-control required"
                        value="<%=business[0].phone%>" placeholder="Enter your Phone">
                    </div>
                    <div class="col-md-6 ">
                      <label for="country">Country:</label>
                      <select class="form-control " name="country" id="scountry">
                        <option value="<%=business[0].country%>"><%=business[0].country%></option>
                        <option value="UK">UK</option>
                        <option value="USA">USA</option>
                        <option value="UAE">UAE</option>
                        <option value="International">International</option>
                      </select>
                    </div>
                    <div class="col-md-6 form-group">
                      <label for="city">City:</label>
                      <input type="text" name="city" id="city" class="form-control" value="<%=business[0].city%>"
                        placeholder="Enter your City">
                    </div>
                    <div class="w-100"></div>
                    <div class="col-md-12 form-group">
                      <label for="country">Number of employees you are looking for</label>
                      <select class="form-control " name="numemp" id="numemp">
                        <option value="<%=business[0].employees_number%>"><%=business[0].employees_number%></option>
                        <option value="0-25">0-25</option>
                        <option value="25-50">25-50</option>
                        <option value="50+">50+</option>
                      </select>
                    </div>
                  </div>
                    <div class="form-group">
                      <label for="ideal">Ideal Barista:</label>
                      <textarea name="ideal" id="ideal" class="form-control" cols="30"
                        rows="10"><%=business[0].ideal%></textarea>
                    </div>
                  </div>

                  <div class="col-12 mt-2">
                    <button type="submit" name="submit" class="btn btn-success">Done</button>
                    <a href="javascript: history.go(-1)" class="btn btn-warning">Back</a>
                  </div>

                  <input type="hidden" name="prefix" value="">
              </form>
            </div>

          </div>

        </div>

      </div>

    </div>

  </section><!-- #content end -->

  <%include partials/footer.ejs%>

</body>



<%include partials/scripts1.ejs%>